<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar.Style" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?android:attr/actionBarSize</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="CardView.Style" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">12dp</item>
    </style>
</resources>