<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorThemeForeground"
        android:padding="16dp">

        <TextView
            android:id="@id/category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="?attr/colorControlNormal"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Technique and mechanics" />

        <TextView
            android:id="@+id/category_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorControlNormal"
            android:layout_marginTop="12dp"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/category_name"
            tools:text="Id: 285" />

        <TextView
            android:id="@+id/category_book_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorControlNormal"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/category_id"
            tools:text="Books: 933" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/close_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/accent"
            android:padding="12dp"
            android:text="@string/close"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:cornerRadius="24dp"
            app:layout_constraintTop_toBottomOf="@id/category_book_count"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>